<PISI>
    <Source>
        <Name>python-dbus</Name>
        <Packager>
            <Name>Evolve OS Packaging</Name>
            <Email>packaging@evolve-os.com</Email>
        </Packager>
        <Summary>D-Bus module for Python</Summary>
        <Description>Easy access to dbus from Python</Description>
        <License>GPLv2+</License>
        <Archive sha1sum="7a00f7861d26683ab7e3f4418860bd426deed9b5" type="targz">http://dbus.freedesktop.org/releases/dbus-python/dbus-python-1.2.0.tar.gz</Archive>

        <BuildDependencies>
            <Dependency>dbus-devel</Dependency>
            <Dependency>dbus-glib</Dependency>
            <Dependency type="pkgconfig">python</Dependency>
            <Dependency type="pkgconfig">python-3.5</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>python-dbus</Name>
        <Files>
            <Path fileType="library">/usr/lib/python2*</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
        <PartOf>system.base</PartOf>
        <RuntimeDependencies>
            <Dependency>python</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>python3-dbus</Name>
        <PartOf>programming.python</PartOf>
        <Files>
            <Path fileType="library">/usr/lib/python3*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>python3</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>python-dbus-devel</Name>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>python-dbus</Dependency>
        </RuntimeDependencies>
    </Package>


